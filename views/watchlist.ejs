<style>
    li {
        color: white;
    }
    h1 {
        color: white;
    }
    a {
        padding: 0px;
        color: white;
    }
</style>

<h1>My Watchlist</h1>
<ul>
    <% movies.forEach(movie => { %>
        <li>
            <a href="/movie/<%= movie.apiId%>"><%= movie.title %></a>
            <form action="/movie/<%= movie.id %>?_method=DELETE" method="POST">
                <input type="submit" name="delete" value="delete">
            </form>
        </li>
    <% }) %>
</ul>